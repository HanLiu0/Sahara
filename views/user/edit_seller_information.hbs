<div class="container">
    <h1>Edit Seller Information</h1>
    <form method="post" action="edit_account_information">
        <h4>Company Information</h4>
        <div class="form-group row">
            <label for="firstName" class="col-sm-2 col-form-label">Company Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="companyName" placeholder="First Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="phoneNumber" class="col-sm-2 col-form-label">Phone Number:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="phoneNumber" placeholder="Phone Number">
            </div>
        </div>
        <h4>Address</h4>
        <div class="form-group row">
            <label for="address1" class="col-sm-2 col-form-label">Street Address Line 1:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="address1" placeholder="Street Address Line 1">
            </div>
        </div>
        <div class="form-group row">
            <label for="address2" class="col-sm-2 col-form-label">Street Address Line 2:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="address2" placeholder="Street Address Line 2">
            </div>
        </div>
        <div class="form-group row">
            <label for="city" class="col-sm-2 col-form-label">City:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="city" placeholder="City">
            </div>
        </div>
        <div class="form-group row">
            <label for="state" class="col-sm-2 col-form-label">State/Province/Region:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="state" placeholder="State/Province/Region">
            </div>
        </div>
        <div class="form-group row">
            <label for="country" class="col-sm-2 col-form-label">Country:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="country" placeholder="Country">
            </div>
        </div>
        <div class="form-group row">
            <label for="zipCode" class="col-sm-2 col-form-label">Zip Code:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="zipCode" placeholder="Zip Code">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Done</button>
    </form>
</div>