<div class="banner">
    <p class="bannerText">Your Refunds</p>
</div>
<div class="container">
    <a href="/user/account_overview" class="text-color-2"><i class="fas fa-caret-left"></i> Back</a>
    {{#if refunds}}
        {{# each refunds}}
            <div class="card mb-3 card-border-top">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h5 class="card-title">Refund Number: {{this.[Order ID]}}</h5>
                            <div class="card-text">
                                {{#each this.items}}
                                    <div class="row">
                                        <div class="col-6 col-md-4">
                                            <img style="max-height: 120px; width: auto;"
                                                 src="/images/{{this.[Item ID]}}.jpg"
                                                 alt="Item image for {{this.[Item ID]}}"/>
                                        </div>
                                        <div class="col-12 col-md-8">
                                            <a href="/item/{{this.[Item ID]}}">{{this.[Item Name]}}</a>
                                            <p>Quantity: {{this.[Quantity]}}</p>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                            <p>Total Price: {{this.[Refund Price]}}</p>
                            <p>Reason: {{this.[Refund Reason]}}</p>
                        </div>

                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>You have not refunded anything on Sahara yet! Click <a href="/">here</a> to back to our homepage!</p>
    {{/if}}
</div>
