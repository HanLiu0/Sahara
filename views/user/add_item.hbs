<div class="banner">
    <p class="bannerText">Add Item</p>
</div>

{{#if errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{messages}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}
<div class="container">
    <a href="/user/account_overview" class="text-color-2 links"><i class="fas fa-caret-left"></i> Back</a>
    <form class="needs-validation" novalidate method="post" action="add_item" encType="multipart/form-data">
        <div class="card-border-top">
        <div class="mb-3">
            <label for="itemName">Item Name:</label>
                <input type="text" class="form-control" name="itemName" placeholder="Item Name" required>
            <div class="invalid-feedback">
                Please enter item name.
            </div>
        </div>


        <div class="row">
            <div class="col-md-5 mb-3">
                <label for="type">Type:</label>
                <div>
                <select class="custom-select col-sm-10" id="type" name="type">
                    {{#each itemTypes}}
                        <option {{#if first}}selected{{/if}}>{{this}}</option>
                    {{/each}}
                </select>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="price">Price:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" class="form-control" name="price" placeholder="Price" min="0.01" step="0.01" max="99999.99" value="0.01" required>
                    </div>
                <div class="invalid-feedback">
                    Please enter item price.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="quantity">Quantity:</label>
                    <input type="number" class="form-control" name="quantity" placeholder="Quantity" min="1" step="1" max="999" value="1" required>
                <div class="invalid-feedback">
                    Please enter item quantity between 1 and 999.
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" rows="5" placeholder="Description"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="col-form-label">Image:</label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="image" name="image" accept="image/*" onchange="readText(this)"; required>
                <label class="custom-file-label" id="fileLabel" for="image">Choose file</label>
            </div>
        </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Done</button>
    </form>
</div>