<div class="container">
    {{#if errors}}
        <p>{{messages}}</p>
    {{/if}}
    <a href="/user/account_overview" class="btn btn-primary mb-2">Back</a>
    <h1>Change Password</h1>
    <form method="post" action="change_password">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Current Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="currentPassword" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">New Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="newPassword" placeholder="New Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Reenter New Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="reenterNewPassword" placeholder="Reenter New Password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Done</button>
    </form>
</div>