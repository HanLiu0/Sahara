<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict';

        window.addEventListener('load', function() {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');

            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<div class="container">
    <a href="/user/account_overview" class="btn btn-primary mb-2">Back</a>
    <h1>Payment Options</h1>
    <h4>Your credit and debit cards</h4>
    {{#if payments}}
        <div class="accordion" id="accordionExample">
        {{# each payments}}
            <div class="card">
                <div class="card-header" id="heading{{this.PaymentId}}">
                    <h2 class="mb-0">
                        <button class="btn btn-link " type="button" data-toggle="collapse" data-target="#collapse{{this.PaymentId}}" aria-expanded="true" aria-controls="collapse{{this.PaymentId}}">
                        Card ending in {{this.[Credit Card Number]}}
                        </button>
                    </h2>
                </div>

                <div id="collapse{{this.PaymentId}}" class="collapse" aria-labelledby="heading{{this.PaymentId}}" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>
                            <strong>Type:</strong> {{this.[Payment Type]}}
                            <br />
                            <strong>CardHolder's Name:</strong> <br />{{this.[CardHolder's Firstname]}}  {{this.[CardHolder's Lastname]}}
                            <br />
                            <strong>Billing Address:</strong>
                            <br />
                            {{this.[Street Address Line 1]}}
                            {{this.[Street Address Line 2]}}<br />
                            {{this.[City]}}, {{this.[State/Province/Region]}} {{this.[Zip Code]}}<br />
                            {{this.[Country]}}
                        </p>
                        <a class="btn btn-danger" href="payment_options/remove_payment/{{this.PaymentId}}">Remove</a>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
    <br />
    {{else}}
        <p>You have not add any payments yet! Fill out the form below and add your first card!</p>
    {{/if}}
    <h4>Add a new card</h4>
    <div class="col-md-8 order-md-1">
        <h5 class="mb-3">Billing address</h5>
        <form class="needs-validation" novalidate method="post" action = "payment_options">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" name = "firstName" id="firstName" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="address">Address</label>
                <input type="text" class="form-control" name = "address" id="address" placeholder="1234 Main St" required>
                <div class="invalid-feedback">
                    Please enter your shipping address.
                </div>
            </div>

            <div class="mb-3">
                <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                <input type="text" class="form-control" id="address2" name ="address2" placeholder="Apartment or suite">
            </div>

            <div class="row">
                <div class="col-md-5 mb-3">
                    <label for="city">City</label>
                    <input type = "text" class = "form-control" id ="city" name = "city" required>
                    <div class="invalid-feedback">
                        Please enter a valid city.
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="state">State</label>
                    <input type = "text" class = "form-control" id ="state" name = "state" required>
                    <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="zip">Zip</label>
                    <input type="text" class="form-control" id="zip" name = "zip" placeholder="" pattern = "\d{5}|\d{9}" required>
                    <div class="invalid-feedback">
                        Zip code required.
                    </div>
                </div>
            </div>
            <div class = "row">
                <div class="col-md-5 mb-3">
                    <label for="country">Country</label>
                    <input type = "text" class = "form-control" id ="country" name = "country" required>
                    <div class="invalid-feedback">
                        Please enter a valid country.
                    </div>
                </div>
            </div>

            <h5 class="mb-3">Payment</h5>

            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="VISA" value = "VISA" name="paymentMethod" type="radio" class="custom-control-input" checked required>
                    <label class="custom-control-label" for="VISA">VISA</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="AMERICANEXPRESS" value = "AMERICAN EXPRESS" name="paymentMethod" type="radio" class="custom-control-input" required>
                    <label class="custom-control-label" for="AMERICANEXPRESS">American Express</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="DISCOVER" value = "DISCOVER" name="paymentMethod" type="radio" class="custom-control-input" required>
                    <label class="custom-control-label" for = "DISCOVER">Discover</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="MASTERCARD" value = "MASTERCARD" name="paymentMethod" type="radio" class="custom-control-input" required>
                    <label class="custom-control-label" for = "MASTERCARD">Mastercard</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="cc-name">Name on card</label>
                    <input type="text" class="form-control" id="cc-name" name = "name" placeholder="" required>
                    <small class="text-muted">Full name as displayed on card</small>
                    <div class="invalid-feedback">
                        Name on card is required
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="cc-number">Credit card number</label>
                    <input type="text" class="form-control" id="cc-number"name = "number" pattern = "\d{15,16}" placeholder="" required>
                    <div class="invalid-feedback">
                        Credit card number is required
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="cc-expiration">Expiration (YYYY-MM-DD)</label>
                    <input type="text" class="form-control" pattern="\d{4}-(0?[1-9]|1[012])-(0?[1-9]|[12][0-9]|3[01])" id="cc-expiration" name = "expiration" placeholder="" required>
                    <div class="invalid-feedback">
                        Expiration date required
                    </div>
                </div>
                <div class="col">
                    <label for="cc-cvv">CVV</label>
                    <input type="text" class="form-control" id="cc-cvv" name = "cvv" placeholder="" pattern = "\d{3}" required>
                    <div class="invalid-feedback">
                        Security code required
                    </div>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit"> Save new payment</button>
        </form>
    </div>
</div>