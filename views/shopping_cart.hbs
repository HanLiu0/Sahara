<div id = "shoppingCart_left" style = "width:60%">
<h1>Shopping Cart</h1>
<table cellspacing = "0" cellpadding = "20">
    <tr>
        <td></td>
        <td>Name</td>
        <td>Price</td>
        <td>Quantity</td>
    </tr>
    {{# each shopping_cart }}
    <tr style="outline: thin solid">
        <td><img style="max-height: 200px; width: auto;" src = "images/{{this.ItemID}}.jpg" alt="Item image for {{this.ItemID}}"></td>
        <td>{{this.[Item Name]}}</td>
        <td>{{this.Price}}</td>
        <td>{{this.quantity}}</td>
    </tr>
    {{/each}}
</table>
</div>
<div id = "shoppingCart_right" style = "width:20%" >
    <h1>Subtotal: ${{shopping_cart.0.[Total Price]}}</h1>
    <a href= "">Proceed to checkout</a>
</div>
<div id = "shoppingCart_bottom">
    <h1>Recommendation</h1>
</div>












