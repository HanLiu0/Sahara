<div class = "container">
    <div class = "row">
            <div class ="col-8">
            <h1>Shopping Cart</h1>

            {{#if this.shopping_cart}}
            <table cellspacing = "0" cellpadding = "20" >
                <tr>
                    <td></td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>Remove</td>
                </tr>
                {{# each shopping_cart }}
                <tr style="outline: thin solid">
                    <td><a href= "item/{{this.[Item ID]}}"><img style="max-height: 120px; width: auto;" src = "images/{{this.ItemID}}.jpg" alt="Item image for {{this.ItemID}}"></td>
                    <td><a href = "#">{{this.[Item Name]}}</a></td>
                    <td style = "text-align:center">${{this.Price}}</td>
                    <td style = "text-align:center">
                    <form method="post" action = "shopping_cart/edit_in_shopping_cart/{{this.ItemID}}">
                        <input name = "quantity" type="number" min = "1" max = "{{this.Quantity}}" value = {{this.quantity}}>
                        <input type="submit">
                    </form>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="shopping_cart/remove_from_shopping_cart/{{this.ItemID}}">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </table>
            {{else}}
                <p>Your shopping cart is empty, <a href = "/">click here</a> to buy something!</p>
            {{/if}}
        </div>
        <div class="col-4" >
        {{#if this.shopping_cart}}
            <h1>Subtotal:<br /> ${{shopping_cart.0.[Total Price]}}</h1>
            <a href= "/checkout" role = "button" class="btn btn-outline-warning">Proceed to Checkout</a>
        {{/if}}
        </div>
    </div>
    <div>
        {{# if recommend}}
        <div id = "shoppingCart_bottom">
            <div id="shoppingCart_Recommend" class="carousel slide" data-ride="carousel"  data-interval="false">
                    <div class="carousel-inner" style = "padding-top: 50px">
                        <div class="carousel-inner">
                            {{#each recommend}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                    <div class="row">
                                        {{#each this}}
                                            <div class="col-sm"><a href= "item/{{this.[Item ID]}}"><img height = 150 style="overflow:hidden" src="images/{{this.[Item ID]}}.jpg" alt="Image for {{this.[Item ID]}}"></a></div>
                                        {{/each}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#shoppingCart_Recommend" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only" style="background-color: black;">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#shoppingCart_Recommend" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
            </div>
        </div>
        {{else}}
            <p>Welcome to Sahara! Go to our <a href="#">items</a> page to view all the items we have!</p>
        {{/if}}
    </div>
</div>











